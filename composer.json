{
    "name": "mzagmajster/omnivery-mailer-bundle",
    "description": "Integrate Swiftmailer transport for Omnivery API",
    "type": "mautic-plugin",
    "keywords": [
        "mautic",
        "plugin",
        "integration",
        "omnivery"
    ],
    "extra": {
        "install-directory-name": "OmniveryMailerBundle",
        "display-name": "Omnivery Mailer Bundle"
    },
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Matic Zagmajster",
            "homepage": "https://maticzagmajster.ddns.net/",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=7.4.0 <8.1",
        "mautic/core-lib": "^4.3"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "friendsofphp/php-cs-fixer": "2.19.0"
    },
    "scripts": {
        "lint": "vendor/bin/parallel-lint --exclude ./vendor .",
        "checkcs": "php-cs-fixer fix --config=./.php_cs.dist.php --diff --dry-run",
        "fixcs": "php-cs-fixer fix --config=./.php_cs.dist.php",
        "createEnvFile": "cp plugin-env.php.example .plugin-env.php",
        "post-install-cmd": [
            "@createEnvFile"
        ]
    }
}
